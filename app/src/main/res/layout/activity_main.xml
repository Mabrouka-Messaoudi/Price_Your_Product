<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/type_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/window_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Window" />
        <RadioButton
            android:id="@+id/door_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/window_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RadioGroup
            android:id="@+id/window_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/single_panel_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Panel" />
            <RadioButton
                android:id="@+id/double_panel_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Double Panel" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/window_shape_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/square_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square" />
            <RadioButton
                android:id="@+id/rectangular_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rectangular" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/width_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/height_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height"
        android:inputType="numberDecimal" />
    <EditText
        android:id="@+id/perimeter_offset_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Perimeter Offset"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/material_price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Total Price: $"
        android:textSize="18sp" />
</LinearLayout>
